<div class="container md:my-6 p-6 sm:p-16 mx-auto">
  <div class="h1 my-6">
    <h1
      class="max-w-lg text-3xl font-semibold leading-normal text-indigo-800 cursor-pointer dark:text-white"
    >
      Welcome to your Dashboard
    </h1>
    <h1 class="text-4xl">
      {{user.name}}
    </h1>
  </div>
  <!-- Course Overview -->
  <div
    class="sm:grid sm:grid-cols-2 md:grid-cols-3 gap-4 mx-auto text-gray-600"
  >
    <div class="bg-white shadow-lg rounded-lg p-6 h-auto">
      <h2 class="text-xl font-bold mb-4">
        Course Overview
      </h2>
      <ul>
        {{#each courses}}
          <li class="border-b border-gray-300 py-2 mb-2">
            <h3 class="text-lg font-semibold">
              {{this.title}}
            </h3>
            <p class="text-gray-700">
              Grade: {{this.grade}}
            </p>
            <p class="text-gray-700">
              Assignments: {{this.assignments}}
            </p>
            <p class="text-gray-700">
              Upcoming Deadlines: {{this.deadlines}}
            </p>
          </li>
        {{/each}}
      </ul>
    </div>

    <!-- Schedule -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        Schedule
      </h2>
      {{! Calendar view of student's schedule }}
    </div>

    <!-- Progress Tracker -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        Progress Tracker
      </h2>
      {{! Overview of student's progress towards degree requirements }}
    </div>

    <!-- Task Management -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        Task Management
      </h2>
      <ul>
        {{#each tasks}}
          <li class="mb-1">
            <span>
              {{this}}
            </span>
          </li>
        {{/each}}
      </ul>
    </div>

    <!-- Communication -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        Communication
      </h2>
      {{! Section for internal communication with instructors or other students }}
    </div>

    <!-- Resources -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        Resources
      </h2>
      {{! Access to academic advising, career services, tutoring services, etc. }}
    </div>

    <!-- News Feed -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        News Feed
      </h2>
      {{! A news feed that aggregates relevant news articles or updates from the university or college }}
    </div>

    <!-- Analytics -->
    <div class="bg-white shadow-lg rounded-lg p-6 mt-6">
      <h2 class="text-xl font-bold mb-4">
        Analytics
      </h2>
      {{! Detailed analytics on student's academic performance over time }}
    </div>
  </div>
</div>